{
  "extends": [
    "tslint-config-airbnb"
  ],
  "ignoreDefinitionFiles": false,
  "autoFixOnSave": true,
  "exclude": "**/node_modules/**/*",
  "rules": {
    "align": [
      false,
      "parameters"
    ],
    "max-line-length": false,
    "strict-boolean-expressions": false,
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ]
  }
}
