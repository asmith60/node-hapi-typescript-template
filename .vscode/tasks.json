{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "test",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "label": "webpack-watch",
      "script": "build:watch",
      "isBackground": true,
      "problemMatcher": {
        "owner": "custom",
        "fileLocation": "relative",
        "pattern": {
          "regexp": ".*",
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Webpack is watching the filesâ€¦",
          "endsPattern": "Webpack: finished building"
        }
      }
    }
  ]
}
