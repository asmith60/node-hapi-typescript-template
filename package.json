{
  "name": "node-hapi-typescript-template",
  "version": "1.0.0",
  "description": "node hapi typescript template",
  "main": "dist/App.js",
  "scripts": {
    "build": "node_modules/typescript/bin/tsc",
    "dev": "npm run build && npm start",
    "dev:watch": "node_modules/.bin/nodemon -e ts -w ./src -x npm run dev",
    "dev:debug": "npm run build && npm run debug",
    "dev:debug:watch": "node_modules/.bin/nodemon -e ts -w ./src -x npm run dev:debug",
    "test": "npm run build && node_modules/mocha/bin/mocha dist/**/*.spec.js",
    "lint": "node_modules/tslint/bin/tslint -p . -c tslint.json",
    "start": "node dist/App.js",
    "debug": "node inspect dist/App.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asmith60/node-hapi-typescript-template.git"
  },
  "keywords": [
    "typescript",
    "hapi",
    "template",
    "boilerplate"
  ],
  "author": "asmith60",
  "license": "ISC",
  "devDependencies": {
    "@types/boom": "4.3.7",
    "@types/chai": "4.0.4",
    "@types/hapi": "16.1.9",
    "@types/joi": "10.4.3",
    "@types/mocha": "2.2.43",
    "@types/node": "8.0.28",
    "chai": "4.1.2",
    "mocha": "3.5.3",
    "nodemon": "1.12.1",
    "tslint": "5.7.0",
    "tslint-config-airbnb": "5.3.0",
    "typescript": "2.5.2"
  },
  "dependencies": {
    "boom": "5.2.0",
    "hapi": "16.6.0",
    "hapi-swagger": "7.8.1",
    "inert": "4.2.1",
    "joi": "11.0.3",
    "vision": "4.1.1"
  }
}
